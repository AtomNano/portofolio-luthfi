#=============================================================================
# APPLICATION SETTINGS
# Basic application configuration
#=============================================================================
APP_NAME="Portofolio Luthfi"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#=============================================================================
# DATABASE CONNECTION
# Choose between SQLite (default) or MySQL
#=============================================================================

# Option 1: SQLite (simple, no extra setup)
DB_CONNECTION=sqlite

# Option 2: MySQL (uncomment below and comment SQLite above)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=portofolio_luthfi
# DB_USERNAME=root
# DB_PASSWORD=

#=============================================================================
# SESSION & CACHE
# Session and caching configuration
#=============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

#=============================================================================
# QUEUE & FILESYSTEM
# Background jobs and file storage
#=============================================================================
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

#=============================================================================
# LOGGING
# Application logging configuration
#=============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#=============================================================================
# SECURITY
# Password hashing and encryption
#=============================================================================
BCRYPT_ROUNDS=12

#=============================================================================
# MAIL CONFIGURATION
# Email sending settings (optional)
#=============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#=============================================================================
# OPTIONAL SERVICES
# Configure only if needed
#=============================================================================

# Redis (optional - for caching/queues)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Memcached (optional)
# MEMCACHED_HOST=127.0.0.1

# AWS S3 (optional - for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

#=============================================================================
# VITE (FRONTEND)
# Frontend build configuration
#=============================================================================
VITE_APP_NAME="${APP_NAME}"
